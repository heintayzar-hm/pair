<%= form_with url: user_experience_path, method: :post do |form| %>
  <div class="flex flex-col text-lg min-w-[300px] items-center font-normal gap-5 ">
  <h2 class="text-center font-bold font-secondary text-3xl py-10">Select Your Experience Level</h2>
  <div class="flex items-center sm:w-[50%] justify-center flex-col gap-5">
    <%= form.select(:experience_level, options_for_select(['Junior', 'Mid', 'Senior'], selected: "Junior"), {}, { class: 'py-5 w-full' }) %>

  <%= form.submit 'Next', class: "btn bg-primary hover:bg-secondary transition-all duration-75 ease-in" %>
  </div>
  </div>
<% end %>
