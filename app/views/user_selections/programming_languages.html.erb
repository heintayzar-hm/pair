<%= form_with url: user_programming_languages_path, method: :post do |form| %>
  <div class="flex flex-col text-lg justify-start px-3 items-start gap-2">
  <h2 class="text-center font-bold font-secondary text-3xl py-10">Select Your Programming Languages</h2>
  <% @programming_languages.each do |language| %>
    <label>
      <%= form.check_box :programming_languages, { multiple: true }, language.name, nil %>
      <%= language.name %>
    </label>
    <br>
  <% end %>
  <%= form.submit 'Finish', class: "btn bg-primary hover:bg-secondary transition-all duration-75 ease-in" %>
  </div>
<% end %>
