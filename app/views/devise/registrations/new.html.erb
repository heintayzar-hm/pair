<div class="sm:px-[20%] px-[10%]">
  <h1 class="font-bold font-secondary text-3xl font-bold rounded-md text-center my-5">Sign Up</h1>
  <%= form_for(resource, as: resource_name, url: registration_path(resource_name), :html => {:class => "flex flex-col text-lg min-w-[300px] items-center font-normal gap-5"} ) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>

    <div class="field py-4 w-full sm:w-[50%]">
      <%= f.label :Name %><br />
      <%= f.text_field :name, autofocus: true, autocomplete: "name", class: "dark:text-black border focus:dark:border-darkTheme foucs:border focus:dark:shadow-custom mt-3 rounded-lg  border px-2 focus:outline-none w-full py-2 text-xl"  %>
    </div>

    <div class="field py-4 w-full sm:w-[50%]">
      <%= f.label :email %><br />
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "mt-3 rounded-lg dark:text-black border foucs:border focus:dark:shadow-custom focus:dark:border-darkTheme text-black  border px-2 focus:outline-none w-full py-2 text-xl "  %>
    </div>

    <div class="field py-4 w-full sm:w-[50%]">
      <%= f.label :password %>
      <% if @minimum_password_length %>
        <em>(<%= @minimum_password_length %> characters minimum)</em>
      <% end %><br />
      <%= f.password_field :password, autocomplete: "new-password", class: "mt-3 dark:text-black border foucs:border focus:dark:shadow-custom focus:dark:border-darkTheme text-black rounded-lg  border px-2 focus:outline-none w-full py-2 text-xl"  %>
    </div>

    <div class="field py-4 w-full sm:w-[50%]">
      <%= f.label :password_confirmation %><br />
      <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "mt-3 dark:text-black border foucs:border focus:dark:shadow-custom focus:dark:border-darkTheme text-black rounded-lg  border px-2 focus:outline-none w-full py-2 text-xl"  %>
    </div>

    <div class="action text-center flex justify-evenly w-full w-full sm:w-[50%]">
      <%= f.submit "Sign up", class: "text-center bg-primary text-white p-3 rounded-lg hover:bg-secondary" %>
          <%= render "devise/shared/links" %>

    </div>
  <% end %>

  <div class="flex items-center flex-col">
  </div>
</div>
