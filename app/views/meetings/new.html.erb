<%# Path: app/views/meetings/new.html.erb %>

<h1>New Meeting</h1>

<%= form_with(model: @meeting, url: meetings_path, method: :post) do |form| %>
  <div class="form-group">
    <%= form.label :name %>
    <%= form.text_field :name, class: 'form-control' %>
  </div>

<div class="form-group">
  <%= form.label :date %>
  <%= form.text_field :start_time, class: 'flatpickr form-control', data: { enableTime: true, noCalendar: true, dateFormat: 'H:i', minuteIncrement: 45 } %>
</div>


  <div class="form-group">
    <%= form.label :description %>
    <%= form.text_area :description, class: 'form-control' %>
  </div>

<div class="form-group">
  <%= form.check_box :is_public, class: 'form-control' %>
  avaliable to all?
</div>


  <%= form.submit 'Create Meeting', class: 'btn btn-primary' %>
<% end %>

<script>
document.addEventListener('DOMContentLoaded', function() {
  flatpickr('.flatpickr', {
    enableTime: true,
    dateFormat: 'Y-m-d H:i',
    minuteIncrement: 45
  });
});
</script>
